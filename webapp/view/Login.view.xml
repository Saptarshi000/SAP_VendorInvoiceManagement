<mvc:View controllerName="sapvim.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield">
    <Page id="page" title="{i18n>login}" titleAlignment="Center" class="backgroundPage">
        <content>
            <f:Card
                id="_IDGenCard12"
                class="cardStyles1"
                width="550px"
                height="416px"
            >
                <f:content>
                    <VBox id="_IDGenVBox1"
                    >
                        <Image id="_IDGenImage1" src="https://media.glassdoor.com/sql/717958/tecnics-squarelogo-1504621550114.png" width="200px" height="120px"
                            class="logoclass" />

                        <HBox
                            id="_IDGenHBox444"
                            class="LoginDetailsBoxStyles"
                        >
                            <VBox id="_IDGenVBox14"
                                class="sapUiSmallMarginBegin sapUiMediumMarginTop sapUiSmallMarginEnd">
                                <Title
                                    id="_IDGenText14"
                                    text="Vendor ID"
                                    class="loginusernameStyle" />
                                <Input id="login" type="Text" width="500px" class="loginusernameStyle" />
                                <VBox id="_IDGenVBox1234" class="usernameStyle2">
                                    <Title
                                        id="_IDGenText14344"
                                        text="Password" class="loginusernameStyle" />
                                    <Input id="password" type="Password" width="500px" />
                                </VBox>
                                <Button
                                    id='dashboard'
                                    text='Login'
                                    class="LoginSubmitBtn"
                                    type="Emphasized"
                                    press="getDataValue"
                                />
